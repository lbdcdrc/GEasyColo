{% extends "::base.html.twig" %}
{% block title %}
EasyColo V2 - Mes fiches d'activités
{% endblock title %}
{% block header %}
Mes fiches d'<p id="logo">Activité</p>
{% endblock header %}
{% block body %}
<div id="main-wrapper">
	<div id="main" class="container">
		<div class="row 200%">
			<div class="12u">
				<section class="box highlight">
					<header>
						<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/r/dt/dt-1.10.9/datatables.min.css"/>
						{{ datatable_html({
							'id' : 'dta-offres',
							})
						}}
						<a href="#actimodal" rel="modal:open" class="button">Créer une fiche d'activité</a>
						<div id="actimodal" style="display:none;">
							<div class="modal-content">
							<div class="modal-header">
							  <center><h2>Ajout d'une fiche d'activité :</h2></center>
							</div>
							<center>
							<div style="width:80%;">
							{{ form(form) }}
							</br>
							</div>
							</center>
							<div class="modal-footer">
							</div>
							</div>
						</div>
					</header>
				</section>
			</div>
		</div>
	</div>
</div>



{% endblock body %}


{% block javascripts %}
<script type="text/javascript" charset="utf8" src="//code.jquery.com/jquery-1.10.2.min.js"></script>
<script type="text/javascript" charset="utf8" src="//cdn.datatables.net/1.10.9/js/jquery.dataTables.js"></script>
