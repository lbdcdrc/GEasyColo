	{% elseif "now"|date('Ymd')  > Sejour.DateFin|date('Ymd') %}

	{% include "SejourBundle:PourcentJour:Fini.html.twig" %}
	
	{% else %}
	
	{% include "SejourBundle:PourcentJour:EnCours.html.twig" %}
	
	{% endif %}
