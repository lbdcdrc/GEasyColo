<section id="pricePlans">
	<center>
		<ul id="plans">
			{% for jour in listeJours %}
				<li class="plan">		
					<ul class="planContainer">
						<li class="title"><h2 {% if "now"|date('Ymd')  > jour.date|date('Ymd') %} class="bestPlanTitle" {% endif %} >{{ jour.date|date('d/m/Y') }}</h2></li>
						<li class="price"><p>{{ jour.NbActMatin + jour.NbActAM + jour.NbActSoir}}<span> activités </span></p></li>
						<li>
							<ul class="options">
								<li>Matin : <span>{{ jour.NbActMatin }}</span></li>
								<li>Après-midi : <span>{{ jour.NbActAM }}</span></li>
								<li>Veillée : <span>{{ jour.NbActSoir }}</span></li>
							</ul>
						</li>
						<li class="button-card"><a href="{{ path('jour_indexjour', { 'idSejour': Sejour.id, 'id': jour.id }) }}"><i class="fa fa-search-plus" aria-hidden="true">Consulter</i></a></li>
					</ul>
				</li>
			{% endfor %}
		</ul>
	</center>
</section>
