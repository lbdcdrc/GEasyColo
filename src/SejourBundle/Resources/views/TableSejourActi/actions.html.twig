	  <p>{{ dt_obj.nbAnim }}/{{ dt_obj.nbEnfantMin }}/{{ dt_obj.nbEnfantMax }}</p>
    </div>
  </div>

</div>


<script>
// Get the modal
var varmodalfiche{{ dt_item }} = document.getElementById('modalfiche{{ dt_item }}');

// Get the button that opens the modal
var varbtnfiche{{ dt_item }} = document.getElementById("btnfiche{{ dt_item }}");

// Get the <span> element that closes the modal
