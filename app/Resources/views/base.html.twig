<!doctype html>
<html lang="fr">
	<head>
		<title>{% block title %}EasyColo V2 !{% endblock %}</title>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<!--[if lte IE 8]><script src="/assets/js/ie/html5shiv.js"></script><![endif]-->
		<link rel="stylesheet" href="/assets/css/main.css" />
		<!--[if lte IE 8]><link rel="stylesheet" href="/assets/css/ie8.css" /><![endif]-->
		
		{% block style %}
		{% endblock %}
		
	</head>
	<body class="homepage">
	
		{% block modal %}
		{% endblock modal %}
		
		<div id="page-wrapper">
			<header id="header">
				<div class="logo container">
					<div>
						{% block header %}
						{% endblock %}
					</div>
				</div>
				<i>{% block subheader %} {% endblock %}</i>
				{% for flashMessage in app.session.flashbag.get('notice') %}
					<br>
					<i>
						{{ flashMessage }}
					</i>
				{% endfor %}
			</header>

			<nav id="nav">
				<ul>
					{% include ":Menu:Home.html.twig" %}
					{% include ":Menu:MonCompte.html.twig" %}
					{% include ":Menu:MesSejour.html.twig" %}
					{% include ":Menu:MesActivites.html.twig" %}
					{% include ":Menu:Administration.html.twig" %}
				</ul>
			</nav>

			{% block body %}
			{% endblock %}

			
			{% block footer %}
			{% endblock %}

			<script src="/assets/js/jquery.min.js"></script>
			<script src="/assets/js/jquery.dropotron.min.js"></script>
			<script src="/assets/js/skel.min.js"></script>
			<script src="/assets/js/skel-viewport.min.js"></script>
			<script src="/assets/js/util.js"></script>
			<!--[if lte IE 8]><script src="assets/js/ie/respond.min.js"></script><![endif]-->
			<script src="/assets/js/main.js"></script>
			
			{% block javascripts %}
			{% endblock %}
		</div>
	</body>
</html>
